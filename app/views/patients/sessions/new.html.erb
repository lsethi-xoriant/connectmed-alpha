<div class="middle-box text-center loginscreen  animated fadeInDown">
    <div>
        <a class="navbar-header page-scroll" href="/"><%= image_tag "logos/CMLogoVertical5.png", width: '80%', style: "margin-bottom:10px;" %></a>
        <form class="m-t" role="form" action="#">
            <div class="form-group">
                <input type="email" class="form-control" placeholder="Username" required="true">
            </div>
            <div class="form-group">
                <input type="password" class="form-control" placeholder="Password" required="true">
            </div>
            <button type="submit" class="btn btn-primary block full-width m-b">Login</button>
            <a href="#">Forgot password?</a>

            <p class="text-muted text-center"><br>Don't have an account yet?</p>
            <%= link_to 'Create an Account', new_patient_path, :class =>"btn btn-sm btn-white" %>
        </form>
        <p class="m-t"> <small>ConnectMed &copy; 2015</small> </p>
    </div>
</div>
