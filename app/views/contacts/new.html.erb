<section id="contact" style="padding-top:100px;">
  <div class="container">
    <div class="row">
          <div class="col-lg-12 text-center">
              <h2 class="section-heading">Contact Us</h2>
              <h3 class="section-subheading text-muted">We'd love to tell you more about ConnectMed and discuss your questions.</h3>
          </div>
    </div>
    <div class="row">
          <div class="col-lg-12">
                  <div class="row">
                      <%= simple_form_for @contact do |f| %>
                      <div class="col-md-6">
                        <% if flash.any? %>
                            <%= flash[:error_messages].each do |msg| %>
                            <li style="font-weight:bold;color:red;"><%=msg %></li>
                            <% end %>
                        <% end %>
                          <div class="form-group">
                            <%= f.text_field :name, :required => true, :class => 'form-control', :placeholder => 'Your Name *'  %>
                          </div>
                          <div class="form-group">
                              <%= f.text_field :email, :required => true, :class => 'form-control', :placeholder => 'Your Email *' %>
                          </div>
                          <div class="form-group">
                              <%= f.text_field :phone, :class => 'form-control', :placeholder => 'Your Phone' %>
                          </div>
                      </div>
                      <div class="col-md-6">
                          <div class="hidden">
                              <%= f.input :nickname, :hint => 'Leave this field blank!' %>
                          </div>
                          <div class="form-group">
                              <%= f.text_area :message, :required => true, :class => 'form-control', :placeholder => 'Your Message *' %>
                          </div>
                      </div>
                </div>
                <div class="row">
                      <div class="col-lg-12 text-center">
                          <%= f.button :submit, 'Send message', :class=> "btn btn-xl" , :style=> "font-size:16px;" %>
                          <% if !(flash[:notice].empty?) %>

                          <% end %>
                      </div>
                    <% end %>
                </div>
          </div>
    </div>
    <div class="row" style="margin-top:70px;">
        <div class="col-sm-3">
            <div class="team-member">
                <%= image_tag("welcome/melissa.png", width:'70%', class: 'img-responsive img-circle', alt: 'Melissa McCoy') %>
