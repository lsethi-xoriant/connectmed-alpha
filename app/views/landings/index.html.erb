<section id="register-form" style="padding-top:40px; padding-bottom: 80px;background: #f7a09d;">
<div class="container">
    <div class="row m-b-lg">
        <div class="col-lg-12 text-center">
            <h1 style="color:#898AA6">Want Access to ConnectMed Services ASAP?</h1>
            <p style="color: #fff;">Enter your details below to grab a spot in our early access patient group - we have a limited number left.</p>
        </div>
    </div>
    <div class="row text-center">
        <div class="col-sm-4 col-sm-offset-2">
             <%= form_for [:patient, @patient] do |f| %>
                <div class="form-group">
                    <%= f.text_field :first_name, :required => true, :class => 'form-control', :placeholder => 'First Name*', :type => 'text'  %>
                </div>
                <div class="form-group">
                    <%= f.text_field :last_name, :required => true, :class => 'form-control', :placeholder => 'Last Name*', :type => 'text'  %>
                </div>
                <div class="form-group">
                    <%= f.text_field :email, :required => true, :class => 'form-control', :placeholder => 'Email*', :type => 'email' %>
                </div>
        </div>
        <div class="col-sm-4" style="margin-left:10px">
                <div class="form-group">
                    <%= f.password_field :password,  :required => true, :required => true, :class => 'form-control', :placeholder => 'Password*', :type => 'password', :minlength => '6' %>
                </div>
                <div class="form-group">
                    <%= f.password_field :password_confirmation, :required => true, :class => 'form-control', :placeholder => 'Confirm Password*', :type => 'password', equalTo: "#patient_password" %>
                </div>
                <div class="form-group">
                    <%= label_tag(:source, "How'd Hear About Us?") %>
                    <%= f.select(:source, options_for_select([['Word of Mouth', 1], ['Facebook Ad', 2], ['Other Online Ad', 3], ['Internet Search', 4], ['Physical Ad', 5], ['Other', 6]], 6)) %>
                </div>
                <%= f.hidden_field(:directed_from, value:"home", onchange: "alert('Input collected!')") %>
        </div>
        <div class="row">
        <div class="col-sm-4 col-sm-offset-4 text-center">
                <%= f.submit "Register", :class => 'btn btn-primary block full-width m-b' %>
            <% end %>
              <% if flash[:error_messages] %>
                  <% for m in flash[:error_messages] %>
                    <div class="alert alert-danger alert-dismissable">
                        <button aria-hidden="true" data-dismiss="alert" class="close" type="button">Ã—</button>
                        <%= m %>
                    </div>
                  <% end %>
              <% end %>
        </div>
        </div>
    </div>
</div>
</section>

