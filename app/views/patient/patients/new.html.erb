    <div class="middle-box text-center loginscreen   animated fadeInDown">
        <div>
            <a class="" href="/"><%= image_tag "logos/CMLogoVertical5.png", width: '80%', style: "margin-bottom:10px;" %></a>
             <%= form_for [:patient, @patient] do |f| %>
                <div class="form-group">
                    <%= f.text_field :first_name, :required => true, :class => 'form-control', :placeholder => 'First Name', :type => 'text'  %>
                </div>
                <div class="form-group">
                    <%= f.text_field :last_name, :required => true, :class => 'form-control', :placeholder => 'Last Name', :type => 'text'  %>
                </div>
                <div class="form-group">
                    <%= f.text_field :email, :required => true, :class => 'form-control', :placeholder => 'Email', :type => 'email' %>
                </div>
                <div class="form-group">
                    <%= f.text_field :phone, :class => 'form-control', :placeholder => 'Your Phone', :type => 'text' %>
                </div>
                <div class="form-group">
                    <%= f.password_field :password,  :required => true, :required => true, :class => 'form-control', :placeholder => 'Password', :type => 'password', :minlength => '6' %>
                </div>
                <div class="form-group">
                    <%= f.password_field :password_confirmation, :required => true, :class => 'form-control', :placeholder => 'Confirm Password', :type => 'password', equalTo: "#patient_password" %>
                </div>
                <div class="form-group" style="float:left;margin-left:30px;">
                    <%= label_tag(:age, "Age") %>
                    <%= f.select(:age, options_for_select([['18', 18], ['19', 19], ['20', 20], ['21', 21], ['22', 22], ['23', 23], ['24', 24], ['25', 25], ['26', 26], ['27', 27], ['28', 28], ['29', 29], ['30', 30], ['31', 31], ['32', 32], ['33', 33], ['34', 34], ['35', 35], ['36', 36], ['37', 37], ['38', 38], ['39', 39], ['40', 40], ['41', 41], ['42', 42], ['43', 43], ['44', 44], ['45', 45], ['46', 46], ['47', 47], ['48', 48], ['49', 49], ['50', 50], ['51', 51], ['52', 52], ['53', 53], ['54', 54], ['55', 55], ['56', 56], ['57', 57], ['58', 58], ['59', 59], ['60', 60], ['61', 61], ['62', 62], ['63', 63], ['64', 64], ['65', 65], ['66', 66], ['67', 67], ['68', 68], ['69', 69], ['70', 70], ['71', 71], ['72', 72], ['73', 73], ['74', 74], ['75', 75],], 18)) %>
                </div>
                <div class="form-group">
                    <%= f.radio_button(:gender, "female") %>
                    <%= label_tag(:gender_female, "Female") %>
                    <%= f.radio_button(:gender, "male") %>
                    <%= label_tag(:gender_male, "Male") %>
                </div>
                <div class="checkbox" style="padding-bottom:10px;"><label><i></i><input type="checkbox" required><button type="button" class="btn btn-link" data-toggle="modal" data-target="#termsModal" style="padding:0px;">Agree to the Terms & Conditions</button></label></div>
                <div class="modal inmodal" id="termsModal" tabindex="-1" role="dialog" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content animated fadeIn">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                            <i class="fa fa-clock-o modal-icon"></i>
                            <h4 class="modal-title">ConnectMed Patient Terms & Conditions</h4>
                            <small>PLEASE READ THESE TERMS AND CONDITIONS CAREFULLY

                            </small>
                        </div>
                        <div class="modal-body" style="max-height: 350px; overflow-y: auto;">
                            <%= render 'terms_text' %>
                            <p><strong>I have read this document carefully, and understand the risks and benefits of the teleconferencing consultation and have had my questions regarding the procedure explained and I hereby give my informed consent to participate in a telemedicine visit under the terms described herein. By checking the box containing "Agree to the Terms & Conditions" I hereby state that I have read, understood, and agree to the terms of this document.</strong> </p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-white" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
                </div>
                <%= f.submit "Register", :class => 'btn btn-primary block full-width m-b' %>
            <% end %>
              <% if flash[:error_messages] %>
                  <% for m in flash[:error_messages] %>
                    <div class="alert alert-danger alert-dismissable">
                        <button aria-hidden="true" data-dismiss="alert" class="close" type="button">Ã—</button>
                        <%= m %>
                    </div>
                  <% end %>
              <% end %>
            <p class="text-muted text-center"><small>Already have an account?</small></p>
            <a class="btn btn-sm btn-white btn-block" href="<%= url_for patient_signin_path %>">Login</a>
            <p class="m-t"> <small>ConnectMed &copy; 2015</small> </p>
        </div>
    </div>
